{
  "name": "express-api-template",
  "version": "1.0.0",
  "description": "Starter template for an AI-first architected API using the Express.js tech stack (Express, TypeScript).",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "npm run prisma:generate && npm run lint && tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "npm run prisma:generate && tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prisma:aggregate": "tsx scripts/aggregate-prisma-schema.ts",
    "prisma:generate": "npm run prisma:aggregate && prisma generate",
    "prisma:push": "prisma db push"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "i18next": "^25.8.13",
    "i18next-fs-backend": "^2.6.1",
    "i18next-http-middleware": "^3.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "prisma": "^6.19.2",
    "prettier-plugin-prisma": "^5.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.54.0"
  }
}
